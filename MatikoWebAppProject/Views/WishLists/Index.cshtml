<body>
    <section class="container content-section">
        <h2 class="section-header">WISHLIST</h2>
        @for (int i = 0; i < Model.Count(); i++)//int i = 0 ....
        {
            /* <div class="shop-item">
                 <span class="shop-item-title">@Html.DisplayFor(modelItem => Model.ElementAt(i).Name)</span>
                 <img class="shop-item-image" src=@Model.ElementAt(i).ImageUrl>
                 <div class="shop-item-details">
