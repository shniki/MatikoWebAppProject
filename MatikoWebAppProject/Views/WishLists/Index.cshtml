            <div class="product">
                <div class="product-image">
                    <img src=@Model.ElementAt(i).ImageUrl> @*item is Model[i]*@
                </div>
                <div class="product-details">
                    <div class="product-title"> @Html.DisplayFor(modelItem => Model.ElementAt(i).Name)</div>

                    <div class="product-price"> @Html.DisplayFor(modelItem => Model.ElementAt(i).Price)</div>
                    <a asp-action="Cart" asp-controller="Orders" asp-route-products=@Model.ElementAt(i).Id asp-route-size="" asp-route-isAddition="1" asp-route-isFromWishlist="1" class="btn btn-primary shop-item-button" type="button">ADD TO CART</a>
                    <a asp-action="Index" asp-controller="WishLists" asp-route-prodId=@Model.ElementAt(i).Id asp-route-size="" asp-route-isAddition="0" class="btn btn-primary shop-item-button" type="button">REMOVE FROM WISHLIST</a>
                    
                </div>
            </div>

        }

    </section>
