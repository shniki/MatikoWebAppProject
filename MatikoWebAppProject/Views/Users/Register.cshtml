@model MatikoWebAppProject.Models.Users

@{ ViewData["Title"] = "Register";
    Layout = "_LoginLayout"; }

<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/Register.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

</head>
<body>
    <div class="bg-img">
        <div class="content">
            <header> SIGN UP</header>
            <form asp-action="Register" method="post" class="register_form" name="form" onsubmit="return validated()">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <div class="field">
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                            <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2zm13 2.383-4.758 2.855L15 11.114v-5.73zm-.034 6.878L9.271 8.82 8 9.583 6.728 8.82l-5.694 3.44A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.739zM1 11.114l4.758-2.876L1 5.383v5.73z" />
                        </svg>
                    </span>
                    <input autocomplete="off" name="email" asp-for="Email" placeholder="aaa@bbbb.com" required />
                    @*<span asp-validation-for="Email" class="text-danger"></span>*@
                </div>
                <div id="email_error">Not a valid email</div>

                <div class="field space">
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                        </svg>
                    </span>
                    <input autocomplete="off" name="firstName" asp-for="FirstName" placeholder="Please enter your first name" required />
                    @*<span asp-validation-for="FirstName" class="text-danger"></span>*@
                </div>
                <div id="fistName_error">Please fill up your firstName</div>

                <div class="field space">
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                        </svg>
                    </span>
                    <input autocomplete="off" name="lastName" asp-for="LastName" placeholder="Please enter your last name" required />
                    @*<span asp-validation-for="LastName" class="text-danger"></span>*@
                </div>
                <div id="lastName_error">Please fill up your last Name</div>

                <div class="field space">
                    <input type="date" autocomplete="off" name="birthday" asp-for="Birthday" required />
                    @*<span asp-validation-for="Birthday" class="text-danger"></span>*@
                </div>
                <div id="birthday_error">Eligibility 18 years ONLY.</div>

                <div class="field space">
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-upc" viewBox="0 0 16 16">
                            <path d="M3 4.5a.5.5 0 0 1 1 0v7a.5.5 0 0 1-1 0v-7zm2 0a.5.5 0 0 1 1 0v7a.5.5 0 0 1-1 0v-7zm2 0a.5.5 0 0 1 1 0v7a.5.5 0 0 1-1 0v-7zm2 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-7zm3 0a.5.5 0 0 1 1 0v7a.5.5 0 0 1-1 0v-7z" />
                        </svg>
                    </span>
                    <input autocomplete="off" name="zipCode" asp-for="ZipCode" placeholder="Please enter your zip code" required />
                    @*<span asp-validation-for="ZipCode" class="text-danger"></span>*@
                </div>
                <div id="zipCode_error">Please fill up your zip Code</div>

                <div class="field space">
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-telephone-fill" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z" />
                        </svg>
                    </span>
                    <input autocomplete="off" name="PhoneNumber" asp-for="PhoneNumber" placeholder="Please enter your phone number" required />
                    @*<span asp-validation-for="PhoneNumber" class="text-danger"></span>*@

                </div>
                <div id="PhoneNumber_error">Not a valid phone number</div>

                <div class="field space">
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M2 13.5V7h1v6.5a.5.5 0 0 0 .5.5h9a.5.5 0 0 0 .5-.5V7h1v6.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5zm11-11V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z" />
                            <path fill-rule="evenodd" d="M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z" />
                        </svg>
                    </span>
                    <input autocomplete="off" name="Address" asp-for="Address" placeholder="Please enter your Address" required />
                    @*<span asp-validation-for="Address" class="text-danger"></span>*@

                </div>
                <div id="Address_error">Please fill up your address</div>

                <div class="field space">
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M2 13.5V7h1v6.5a.5.5 0 0 0 .5.5h9a.5.5 0 0 0 .5-.5V7h1v6.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5zm11-11V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z" />
                            <path fill-rule="evenodd" d="M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z" />
                        </svg>
                    </span>
                    <input autocomplete="off" name="City" asp-for="City" placeholder="Please enter your city" required />
                    @*<span asp-validation-for="City" class="text-danger"></span>*@

                </div>
                <div id="City_error">Please fill up your city</div>

                <div class="field space">
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M2 13.5V7h1v6.5a.5.5 0 0 0 .5.5h9a.5.5 0 0 0 .5-.5V7h1v6.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5zm11-11V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z" />
                            <path fill-rule="evenodd" d="M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z" />
                        </svg>
                    </span>
                    <input autocomplete="off" name="Country" asp-for="Country" placeholder="Please enter your country" required />
                    @*<span asp-validation-for="Country" class="text-danger"></span>*@

                </div>
                <div id="country_error">Please fill up your country</div>

                <div class="field space">
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock-fill" viewBox="0 0 16 16">
                            <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z" />
                        </svg>
                    </span>
                    <input type="password" name="password" asp-for="Password" class="password" placeholder="Password" required />
                    @*<span asp-validation-for="Password" class="text-danger"></span>*@
                </div>
                <div id="pass_error">Please fill up your password</div>

                <div class="field">
                    <input type="submit" value="JOIN MATIKO" /><a asp-action="Register" asp-controller="Users"></a>
                </div>
                <div class="signup"> Already Registered? <a asp-action="Login">Click HERE</a> to login </div>

            </form>
        </div>
    </div>
</body>
</html>

@*<script src="~/js/RegisterJ.js"></script>*@



