@model MatikoWebAppProject.Models.Users

@{ ViewData["Title"] = "EditAddressBook";
    Layout = "_Layout"; }


<link rel="stylesheet" href="~/css/edituser.css" type="text/css" />

<body>
    <form asp-action="Edit" method="post" name="form" class="login_form">

        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <input type="text" id="FirstName" asp-for="FirstName" name="firstname" class="form-control" value=@ViewBag.currentUserFirstName>
                        </div>

                    </div>
                    div class="row mb-3">
                    <div class="col-sm-3">
                        <input type="text" id="LastName" asp-for="LastName" name="lastname" class="form-control" value=@ViewBag.currentUserLastName>
                    </div>

                </div>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <input type="hidden" id="Email" asp-for="Email" name="email" class="form-control" value=@Context.User.Claims.ElementAt(1).Value>
                        </div>

                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <input type="text" id="Address" asp-for="Address" name="address" class="form-control" value=@ViewBag.currentAddress>
                        </div>

                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <input type="text" id="Country" asp-for="Country" name="country" class="form-control" value=@ViewBag.currentUserCountry>
                        </div>

                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <input type="text" id="City" asp-for="City" name="city" class="form-control" value=@ViewBag.currentUserCity>
                        </div>

                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <input type="text" id="Phone" asp-for="PhoneNumber" name="phonenumber" class="form-control" value=@ViewBag.currentUserPhoneNumber>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-sm-3"></div>
                        <div class="col-sm-9 text-secondary">
                            <input type="submit" value="Save Changes" /><a asp-action="Edit" asp-controller="Users"></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                    </div>
                </div>
            </div>
        </div>
        </div>
        </div>
        </form>
</body>








@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

